{% extends 'base.html.twig' %}

{% block body %}
<table class="table table-light">
    <tr>
        <th colspan="3" class="text text-danger"><h1>Brand List</h1></th>
        <th>
             <th>
            <a href="{{ path('brand_add') }}">
                <img src={{ asset('image/add.png') }} width="40" height="40">
            </a>
        </th>
        </th>
    </tr>
    <tr>
        <th class="text text-primary">Brand Id</th>
        <th class="text text-primary">Brand Name</th>
        <th class="text text-primary">Brand Image</th>
        <th class="text text-primary">Actions</th>
    </tr>
     {% for brand in brand %}
    <tr>
        <td class="text text-success">{{ brand.id }}</td>
        <td class="text text-success">{{ brand.name }}</td>
        <td>
            <img src="{{ brand.image }}" width="100" height="120">
        </td>
        <td>
            <a href="{{ path('brand_detail', {'id' : brand.id }) }}">
                <img src="{{ asset('image/detail.png')}}" width="35" height="35">
            </a>
            <a href="{{ path('brand_edit', {'id' : brand.id }) }}">
                <img src="{{ asset('image/edit.png')}}" width="50" height="50">
            </a>
            <a href="{{ path('brand_delete', {'id' : brand.id }) }}">
                <img src="{{ asset('image/delete.png')}}" width="50" height="50">
            </a>
        </td>
    </tr>
    {% endfor %}
{% endblock %}
