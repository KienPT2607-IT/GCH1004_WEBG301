{% extends 'base.html.twig' %}

{% block title %}View Records
{% endblock %}

{% block body %}
	<div class="container">
		<table class="table table-light table-hover">
			<thead>
				<tr>
					<th class="text h1 text-center" colspan="4">
						List of Records
					</th>
					<th class="text h1 text-center" colspan="1">
						Total:{{records | length}}
					</th>
					<th>
						<form action="{{path('ad_fill_records_by_date')}}" method="post">
							<input class="form-control" type="date" name="date">
							<input type="submit" class="btn btn-outline-success" value="Fill">
						</form>
					</th>
				</tr>
				<tr>
					<th class="text text-dark">ID</th>
					<th class="text">Staff</th>
					<th class="text">Product</th>
					<th class="text">Image</th>
					<th class="text">Quantity</th>
					<th class="text">Date</th>
				</tr>
			</thead>
			<tbody>
				{% for record in records %}
					<tr>
						<td class="text text-success">{{record.id}}</td>
						<td class="text text-success">{{record.usename.username}}</td>
						<td class="text text-success">{{record.product.name}}</td>
						<td class="text text-success">
							<img src="{{record.product.image}}" alt="">
						</td>
						<td class="text text-success">{{record.quantity}}</td>
						<td class="text text-success">{{record.date | date ('d/m/Y')}}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
