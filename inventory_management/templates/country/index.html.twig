{% extends 'base.html.twig' %}

{% block body %}
	<style>
		body {
			background-image: url("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS3MkVgkPVjPK6PIJbaCPLT3O-hnYB9xdACvQ&usqp=CAU");
			background-repeat: no-repeat;
			background-size: cover;
		}
	</style>


	<div class="container col-md-8 text-center mt-3">
		<form action="{{ path('search_countries') }}" method="post">
			<input type="search" name="name" id="">
			<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
		</form>

		<div class="container span" style="border: 2px solid black">


			<table class="table table-info table-hover mt-3">
				<tr>
					<th colspan="3" class="text text-danger">
						<h1>countries List</h1>
					</th>
					<th>
						<a href="{{ path('add_countries') }}">
							<img src={{ asset('images/actions/add.png') }} width="50" height="50">
						</a>
					</th>
				</tr>
				<tr>
					<th class="text text-primary">Id</th>
					<th class="text text-primary">Title</th>
					<th class="text text-primary">Image</th>
					<th class="text text-primary">Actions</th>
				</tr>
				{% for country in countries %}

					<tr>
						<td class="text text-success">{{ country.id }}</td>
						<td class="text text-success">{{ country.name }}</td>
						<td>
							<a href="{{ path('detail_countries', {'id' : country.id }) }}">
								<img src="{{ country.image }}" width="100" height="120">
							</a>
						</td>
						<td>
							<a href="{{ path('detail_countries', {'id' : country.id }) }}">
								<img src="{{ asset('images/actions/view_detail.png')}}" width="50" height="50">
							</a>
							<a href="{{ path('edit_countries', {'id' : country.id }) }}">
								<img src="{{ asset('images/actions/edit.png')}}" width="50" height="50">
							</a>
							<a href="{{ path('delete_countries', {'id' : country.id }) }}" onclick="return confirm('Are you sure to delete ?');">
								<img src="{{ asset('images/actions/delete.gif')}}" width="50" height="50">
							</a>
						</td>
					</tr>
				{% endfor %}
			</table>
		</div>
	</div>
{% endblock %}

