{% extends "base.html.twig" %}
{% block title %}
	countries detail
{% endblock %}
{% block body %}
	<style>
		body {
			background-image: url("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS3MkVgkPVjPK6PIJbaCPLT3O-hnYB9xdACvQ&usqp=CAU");
			background-repeat: no-repeat;
			background-size: cover;
		}
	</style>
	<div class="container span" style="border: 2px solid white">

		<div class="container mt-3 mb-3">
			<div class="row">
				<div class="col-md-4">
					<img class="container span " style="border: 2px solid black" src="{{ countries.image }}">
				</div>
				<div class="col-md-8">
					<table class="table">
						<tr>
							<th colspan="2" class="bg-success text-warning text-center h2">{{ countries.name }}</th>
						</tr>
						<tr>
							<th class="text-success">ID</th>
							<td class="col-md-9">
								{{ countries.id }}
							</td>
						</tr>
						<tr>
							<th class="text text-success">Product(s):
							</th>
							{% if countries.products != null %}
								<td>
									{% for product in countries.products %}
										<li>
											<a class="text-danger" href="{{ path('ad_view_product_detail', {'id':product.id })}}">
												{{ product.name }}
											</a>
										</li>
									{% else %}
										N/A
									{% endfor %}
								</td>

							{% endif %}
						</tr>
						<tr>
							<th class="text-success">Actions</th>
							<td>
								<a href="{{path('edit_countries', {'id':countries.id})}}">
									<img src="{{asset('images/actions/edit.png')}}" alt="" width="30" height="30">
								</a>
								<a href="{{path('ad_delete_product', {'id':countries.id})}}" onclick="return confirm('Delete this product?');" onclick="return confirm('Are you sure to delete ?');">

									<img src="{{asset('/images/actions/delete.gif')}}" alt="" width="30" height="30">
								</a>
							</td>
						</tr>

					</table>
				</div>
			</div>
		</div>

	</div>
{% endblock %}

