{% extends 'base.html.twig' %}

{% block title %}
	Account List
{% endblock %}

{% block body %}
	<style>
		body {
			background-image: url('https://img.freepik.com/free-vector/abstract-geometric-models-background_52683-25234.jpg?w=2000');
		}
	</style>
	<div class="container" style="border: 2px solid black">
		<table class="table table-light span12 mt-3" style="border: 2px solid black">

			<tr>
				<th colspan="3" class="text text-danger text-center">
					<h1>Account List</h1>
				</th>
				<th class="text-center">
					<a class="text text-primary h5 mt-3" href="{{path('app_register')}}">
						<img src={{ asset('images/actions/add.png') }} width="40" height="40">
					</a>
				</th>
			</tr>
			<div class="container col-md-12 text-center mt-3">
				<tr class="col-md-12 ">
					<th class="text text-primary text-center">Account Id</th>
					<th class="text text-primary text-center">Account Name</th>
					<th class="text text-primary text-center">Actions</th>
					<th></th>
				</tr>
				{% for account in accounts %}
					<tr class="col-md-12 ">
						<td class="text text-success text-center">{{ account.id }}</td>
						<td class="text text-success text-center">{{ account.username }}</td>
						<td class="text-center ">
							<a href="{{path('account_delete', {'id': account.id})}}" onclick="return confirm('Are you sure to delete this account ?');">
								<img src="{{ asset('images/actions/delete.gif')}}" width="50" height="50">
							</a>
						</td>
						<th></th>
					</tr>
				{% endfor %}
			</table>
		</div>
	</div>
{% endblock %}
