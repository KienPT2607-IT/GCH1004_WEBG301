{% extends 'base.html.twig' %}

			{% block title %}Brand List 
			{% endblock %}

{% block body %}
<div class="container span" style="border: 2px solid black">
<table class="table table-light span12 mt-3" style="border: 2px solid black">
    <tr>
        <th colspan="3" class="text text-danger text-center"><h1>Brand List</h1></th>
        <th class= "text-center">
            <a href="{{ path('brand_add') }}">
                <img src={{ asset('images/actions/add.png') }} width="40" height="40">
            </a>
        </th>
    </tr>
    <tr>
        <th class="text text-primary text-center">Brand Id</th>
        <th class="text text-primary text-center">Brand Name</th>
        <th class="text text-primary text-center">Brand Image</th>
        <th class="text text-primary text-center">Actions</th>
    </tr>
     {% for brand in brand %}
    <tr>
        <td class="text text-success text-center">{{ brand.id }}</td>
        <td class="text text-success text-center">{{ brand.name }}</td>
        <td class= "text-center">
            <img src="{{ brand.image }}" width="100" height="120">
        </td>
        <td class= "text-center ">
            <a href="{{ path('brand_detail', {'id' : brand.id }) }}">
                <img src="{{ asset('images/actions/view_detail.png')}}" width="50" height="50">
            </a>
            <a href="{{ path('brand_edit', {'id' : brand.id }) }}">
                <img src="{{ asset('images/actions/edit.png')}}" width="50" height="50">
            </a>
            <a href="{{ path('brand_delete', {'id' : brand.id }) }}">
                <img src="{{ asset('images/actions/delete.gif')}}" width="50" height="50">
            </a>
        </td>
    </tr>
    {% endfor %}
    </table>
</div>
{% endblock %}